{
  "name": "vue-virtual-tree-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "A high-performance virtual tree component for Vue 3",
  "scripts": {
    "prepare": "husky",
    "dev": "pnpm --filter playground dev",
    "build": "pnpm --filter @wxwzl/vue-virtual-tree build",
    "publish": "pnpm run build && pnpm --filter @wxwzl/vue-virtual-tree publish",
    "build:data-generator": "cd packages/data-generator && wasm-pack build --target web --out-dir ../../playground/lib",
    "build:playground": "pnpm run build:data-generator && pnpm --filter playground build",
    "type-check": "pnpm --filter @wxwzl/vue-virtual-tree type-check",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "deploy:demo": "pnpm run build:playground && npx gh-pages -d playground/dist",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md,vue}\""
  },
  "keywords": [
    "vue",
    "vue3",
    "tree",
    "virtual-scroll",
    "virtual-tree"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/wxwzl/vue-virtual-tree.git"
  },
  "homepage": "https://wxwzl.github.io/vue-virtual-tree",
  "author": "wxwzl",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "conventional-changelog-cli": "^5.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=8.0.0"
  }
}
